<body>

  <h2>Vote for Head Boy</h2>

  <div class="ballot-list" data-position="headboy">
    <!-- Repeat for 15 candidates -->
    <label class="candidate-item">
      <div class="candidate-info">
        <div class="logo-placeholder"></div>
        <span class="candidate-name">Candidate 1</span>
      </div>
      <input type="checkbox" name="headboy" value="Candidate 1">
    </label>

    <label class="candidate-item">
      <div class="candidate-info">
        <div class="logo-placeholder"></div>
        <span class="candidate-name">Candidate 2</span>
      </div>
      <input type="checkbox" name="headboy" value="Candidate 2">
    </label>

    <label class="candidate-item">
      <div class="candidate-info">
        <div class="logo-placeholder"></div>
        <span class="candidate-name">Candidate 3</span>
      </div>
      <input type="checkbox" name="headboy" value="Candidate 3">
    </label>

    <!-- Add candidates 4 to 15 below -->
    <!-- You can generate these easily with JS or by copy-pasting -->

    <!-- Sample dynamic continuation -->
    <script>
      const container = document.querySelector(".ballot-list");
      for (let i = 4; i <= 15; i++) {
        const label = document.createElement("label");
        label.className = "candidate-item";
        label.innerHTML = `
          <div class="candidate-info">
            <div class="logo-placeholder"></div>
            <span class="candidate-name">Candidate ${i}</span>
          </div>
          <input type="checkbox" name="headboy" value="Candidate ${i}">
        `;
        container.appendChild(label);
      }
    </script>
  </div>

  <button onclick="submitVote()">Submit Vote</button>

  <script>
    const checkboxes = document.querySelectorAll('input[type="checkbox"][name="headboy"]');

    checkboxes.forEach(checkbox => {
      checkbox.addEventListener('change', () => {
        if (checkbox.checked) {
          checkboxes.forEach(cb => {
            if (cb !== checkbox) cb.checked = false;
          });
        }
      });
    });

    function submitVote() {
      const checked = document.querySelector('input[type="checkbox"][name="headboy"]:checked');
      const vote = checked ? checked.value : 'No selection';
      alert("You voted for:\n" + vote);
    }
  </script>

</body>
</html>
